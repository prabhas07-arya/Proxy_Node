<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="database" />
        <exclude
            domain="sharedpref"
            path="secret_shared_prefs" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow encrypted transfer of app data -->
        <include domain="database" />
        <exclude
            domain="sharedpref"
            path="secret_shared_prefs" />
    </device-transfer>
</data-extraction-rules>